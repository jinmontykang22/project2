<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="jdbc_scenebuilder.AddProductController" spacing="10" alignment="CENTER" prefWidth="400">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <Label text="Add New Product" style="-fx-font-size: 18;" />
        <TextField fx:id="nameField" promptText="Product Name" />
        <TextField fx:id="priceField" promptText="Price" />
        <TextField fx:id="categoryField" promptText="Category" />
        <TextField fx:id="flavorField" promptText="Flavor (int)" />
        <TextField fx:id="milkField" promptText="Milk (decimal)" />
        <TextField fx:id="creamField" promptText="Cream (int)" />
        <TextField fx:id="sugarField" promptText="Sugar (int)" />
        <HBox spacing="10" alignment="CENTER">
            <Button text="Cancel" onAction="#cancel" />
            <Button text="Save" onAction="#saveProduct" />
        </HBox>
    </children>
</VBox>