<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="jdbc_scenebuilder.UpdateProductController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Update Product" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="8">
        <Label text="Product ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Price:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Category:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="categoryField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Flavor:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="flavorField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Milk:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="milkField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Cream:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="creamField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Sugar:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="sugarField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save Changes" onAction="#updateProduct"/>
        <Button text="Cancel" onAction="#cancel"/>
    </HBox>

</VBox>