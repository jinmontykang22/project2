<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="jdbc_scenebuilder.AddEmployeeController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Add Employee" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="8">
        <Label text="Staff ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Role:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="roleField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Salary:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="salaryField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Hours Worked:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="hoursField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#saveEmployee"/>
        <Button text="Cancel" onAction="#cancel"/>
    </HBox>

</VBox>